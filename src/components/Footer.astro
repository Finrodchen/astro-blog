<style>
	footer {
		padding: 2em 1em 6em 1em;
		background: var(--theme-bg-secondary);
		color: var(--theme-text-muted);
		text-align: center;
		border-top: 1px solid var(--theme-border);
		margin-top: 2rem;
	}
	
	.social-links {
		display: flex;
		justify-content: center;
		gap: 1.5rem;
		margin-bottom: 1.5rem;
	}
	
	.social-links a {
		color: var(--theme-text-muted);
		transition: color 0.3s ease, transform 0.2s ease;
		text-decoration: none;
		padding: 0.5rem;
		border-radius: 8px;
		display: flex;
		align-items: center;
		justify-content: center;
	}
	
	.social-links a:hover {
		color: var(--theme-primary);
		transform: translateY(-2px);
		background: var(--theme-bg);
	}
	
	.copyright {
		font-size: 0.9rem;
		color: var(--theme-text-muted);
	}
	
	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		border: 0;
	}
	
	@media (max-width: 480px) {
		.social-links {
			gap: 1rem;
		}
		
		.social-links a {
			padding: 0.4rem;
		}
		
		.social-links svg {
			width: 28px;
			height: 28px;
		}
	}
</style>
