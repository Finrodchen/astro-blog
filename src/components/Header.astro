---
import HeaderLink from './HeaderLink.astro';
import ThemeToggle from './ThemeToggle.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<div class="logo-container">
			<a href="/" class="logo-link">
				<img 
					src="https://img.finrod.xyz/2025/07/4e46e4b092ac0d761472bf338ac0f145.png" 
					alt={SITE_TITLE}
					class="site-logo"
					loading="eager"
				/>
				<span class="site-title">{SITE_TITLE}</span>
			</a>
		</div>
		<div class="internal-links">
			<HeaderLink href="/" class="nav-item">首頁</HeaderLink>
			<HeaderLink href="/blog" class="nav-item">雜談</HeaderLink>
			<HeaderLink href="/biotechnology" class="nav-item">生物科技</HeaderLink>
			<HeaderLink href="/celltherapy" class="nav-item">細胞治療</HeaderLink>
			<HeaderLink href="/coding" class="nav-item">程式開發</HeaderLink>
			<HeaderLink href="/articles" class="nav-item">文章存檔</HeaderLink>
			<HeaderLink href="/about" class="nav-item">關於我</HeaderLink>
		</div>
		<div class="header-actions">
			<ThemeToggle />
		</div>
	</nav>
</header>
<style>
	header {
		position: sticky;
		top: 0;
		z-index: 100;
		margin: 0;
		padding: 0 1em;
		background: rgba(var(--theme-bg-rgb), 0.95);
		border-bottom: 1px solid var(--theme-border);
		box-shadow: var(--theme-shadow-sm);
		backdrop-filter: blur(10px);
		-webkit-backdrop-filter: blur(10px);
	}
	
	.logo-container {
		display: flex;
		align-items: center;
	}

	.logo-link {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		text-decoration: none;
		color: var(--theme-text-primary);
		transition: opacity 0.3s ease;
		padding: 0.5em 0;
		border-bottom: none !important;
	}

	.logo-link:hover {
		opacity: 0.8;
	}

	.site-logo {
		height: 40px;
		width: auto;
		border-radius: 6px;
		background-color: #ffffff;
		padding: 4px;
		box-shadow: var(--theme-shadow-sm);
		transition: transform 0.2s ease;
	}

	.site-logo:hover {
		transform: scale(1.05);
	}

	.site-title {
		font-weight: 600;
		font-size: 1.1rem;
		color: var(--theme-text-primary);
	}
	
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	
	nav a {
		padding: 1em 0.5em;
		color: var(--theme-text-secondary);
		border-bottom: 4px solid transparent;
		text-decoration: none;
		transition: color 0.3s ease, border-color 0.3s ease;
	}
	
	nav a:hover {
		color: var(--theme-text-primary);
	}
	
	nav a.active {
		text-decoration: none;
		color: var(--theme-primary);
		border-bottom-color: var(--theme-primary);
	}
	
	.header-actions {
		display: flex;
		align-items: center;
	}
	
	@media (max-width: 720px) {
		.site-title {
			display: none;
		}

		.logo-link {
			gap: 0;
		}
	}
	
	@media (max-width: 480px) {
		header {
			padding: 0 0.5em;
		}
		
		nav a {
			padding: 0.8em 0.3em;
			font-size: 0.9em;
		}

		.site-logo {
			height: 32px;
		}
	}
</style>
